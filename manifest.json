{
	"manifest_version": 2,
	"version": "1.0",
	"name":"WoolSaver",
	//то что на виду
	"browser_action": {
		"default_icon":"ikon.png",
		"default_title":"Работает шерсть!"
	},
	"icons": {
    	"48":"ikon_48.png",
    	"128":"ikon_128.png"
  	},
	//разрешаем библиотечки
	"permissions": [
		"webRequest","http://vk.com/*"
	],
	//"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
	//фоновый
	
	"background": {
		"page":"background.html"
		//"scripts":["jquery-2.0.3.js","background.js"]
	},
	//разрешенные ресурсы
	"web_accessible_resources":[
		"img/save.png",
		"img/save_r.png",
		"img/close.png"
	],
	"content_scripts": [{
		"matches":["http://vk.com/*"],
		"css":["css/style.css"],
		"js":["jquery-2.0.3.js","main.js"]
	}]
}